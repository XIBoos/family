<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.will.ui.TimelineActivity"
    android:background="#f2f2f2">

    <com.will.widget.TopBar
        android:id="@+id/timeline_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">

    </com.will.widget.TopBar>
    <View
        android:id="@+id/timeline_line1"
        android:layout_below="@id/timeline_topbar"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#b6b6b6"/>
    <ListView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeline_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="#ffffff"
        android:scrollbars="none"
        android:layout_below="@id/timeline_line1" />
    <ImageButton
        android:id="@+id/timeline_button_add"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:src="@drawable/timeline_selector_button"
        android:background="@drawable/timeline_add_button_shape"/>
    <ImageButton
        android:id="@+id/timeline_button_text"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:background="@drawable/timeline_add_button_shape"/>
    <ImageButton
        android:id="@+id/timeline_button_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:background="@drawable/timeline_add_button_shape"/>
    <ImageButton
        android:id="@+id/timeline_button_both"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:visibility="gone"
        android:background="@drawable/timeline_add_button_shape" />

</RelativeLayout>
