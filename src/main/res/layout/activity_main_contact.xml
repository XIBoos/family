<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/main_contact_top">
    <com.will.widget.CircleImageView
        android:id="@+id/main_contact_top_avat"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/main_contact_top_avat_shape"
        />
    <TextView
        android:id="@+id/main_contact_top_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_contact_top_avat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:text="神奇的佳先森"
        android:textColor="#ffffff"
        android:background="#00ffffff"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/contact_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <android.support.v4.view.PagerTitleStrip
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:layout_gravity="bottom"
            android:textSize="15sp">

        </android.support.v4.view.PagerTitleStrip>
    </android.support.v4.view.ViewPager>
</LinearLayout>